<% if (title) { %>
  <h1 class="text-2xl mb-2"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="page-errors mb-2">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<% }); %>
 </ul>
<% } %>

<form id="login-form" action="/account/register" method="post" class="bg-green-200 p-8 text-center form-layout">
  <div class="grid mb-2 text-left grid-cols-1 gap-2 md:grid-cols-2 md:gap-8">
    <label>
      First Name:
      <input type="text" name="account_firstname" required value="<%= locals.account_firstname %>">
    </label>
    <label>
      Last Name:
      <input type="text" name="account_lastname" required value="<%= locals.account_lastname %>">
    </label>
    <label>
      Email:
      <input type="email" name="account_email" required value="<%= locals.account_email %>">
    </label>
    <label>
      Password:
      <input type="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    </label>
  </div>
  <div class="text-sm mb-8">
    Password must be: minimum 12 characters, 1 capital letter, 1 number, 1 special character
  </div>

  <button type="submit" class="bg-green-800 text-white py-2 px-4 rounded">Register</button>

  <p class="mt-4">Already have an account? <a href="/account/login/">Log in</a></p>
</form>