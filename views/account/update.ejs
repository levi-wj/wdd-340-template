<% if (title) { %>
  <h1 class="text-2xl mb-2"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="page-errors mb-2">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<% }); %>
 </ul>
<% } %>

<form id="login-form" action="/account/update" method="post" class="bg-green-200 p-8 text-center form-layout mb-8">
  <h2 class="mb-2">Account Update</h2>
  <div class="grid mb-8 text-left grid-cols-1 gap-2 md:grid-cols-2 md:gap-4">
    <label>
      First Name:
      <input type="text" name="account_firstname" required value="<%= locals.account_firstname %>">
    </label>
    <label>
      Last Name:
      <input type="text" name="account_lastname" required value="<%= locals.account_lastname %>">
    </label>
    <label>
      Email:
      <input type="email" name="account_email" required value="<%= locals.account_email %>">
    </label>
  </div>

  <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> 
      value="<%= locals.account_id %>"
    <% } %>>

  <button type="submit" class="bg-green-800 text-white py-2 px-4 rounded">Save Changes</button>
</form>

<form id="login-form" action="/account/update-password" method="post" class="bg-green-200 p-8 text-center form-layout">
  <h2>Change Password</h2>
  <div class="grid mb-8 text-left grid-cols-1 gap-2">
    <label>
      Password:
      <input type="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    </label>
    <div class="text-sm">
      Password must be: minimum 12 characters, 1 capital letter, 1 number, 1 special character
    </div>
  </div>

  <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> 
      value="<%= locals.account_id %>"
    <% } %>>

  <button type="submit" class="bg-green-800 text-white py-2 px-4 rounded">Save Password</button>
</form>